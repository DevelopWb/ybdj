<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 连框颜色值 -->
    <item android:state_pressed="true">
        <shape>
           
 			<solid android:color="#61AFBC" />
            <stroke android:width="1dp" android:color="#999999" />
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
            
            
        </shape>
    </item>
    
    <!-- 主体背景颜色值 -->
    <item >
        <shape>
            <solid android:color="#E5E5E5" />
            <stroke android:width="1dp" android:color="#999999" />
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
        </shape>
    </item>

</selector>